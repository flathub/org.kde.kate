{
    "id": "org.kde.kate",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kate",
    "rename-icon": "kate",
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup": [
        "/share/zsh",
        "/share/man",
        "/bin/kwrite"
    ],
    "modules": [
        {
            "name": "markdownpart",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.05.2/src/markdownpart-24.05.2.tar.xz",
                    "sha256": "5d6d7f32904b559b430634889547fd1689855aa86fa8b08b0f86dcd36c287514",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/markdownpart-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.05.2/src/konsole-24.05.2.tar.xz",
                    "sha256": "1d05ef1bfa531e41f9625acb95eeb18ef5409fa5160d4b976ce6997759518994",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konsole-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kate",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "post-install": [
                "mv /app/bin/kate /app/bin/kate-bin",
                "install -Dm755 ../kate-wrapper /app/bin/kate"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.05.2/src/kate-24.05.2.tar.xz",
                    "sha256": "774f08b7d53db0b282164e930a0e0cd4709e75938dcb8b3cb430fedf0d5db020",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kate-$version.tar.xz"
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "kate-wrapper",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec /app/bin/kate-bin \"$@\""
                    ]
                }
            ]
        }
    ]
}
