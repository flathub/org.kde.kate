{
    "id": "org.kde.kate",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kate",
    "rename-icon": "kate",
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup": [
        "/share/zsh",
        "/share/man",
        "/bin/kwrite"
    ],
    "modules": [
        {
            "name": "markdownpart",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.04.2/src/markdownpart-25.04.2.tar.xz",
                    "sha256": "87a451d88c0bd35a7e3cc7c61c75dfc7dad974e7d5d4178801ab319980119fd4",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/markdownpart-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.04.2/src/konsole-25.04.2.tar.xz",
                    "sha256": "69cd6c7e84cbcb3df41227cd3115498a5aaddca6641802898d79e5b4e467bbfb",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konsole-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kate",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "post-install": [
                "mv /app/bin/kate /app/bin/kate-bin",
                "install -Dm755 ../kate-wrapper /app/bin/kate"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.04.2/src/kate-25.04.2.tar.xz",
                    "sha256": "6951391a19566d2cc36c369aef86b58261169391d5a64cff0fa7301bb17879a5",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kate-$version.tar.xz"
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "kate-wrapper",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec /app/bin/kate-bin \"$@\""
                    ]
                }
            ]
        }
    ]
}
