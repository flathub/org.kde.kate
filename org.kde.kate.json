{
    "id": "org.kde.kate",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "kate",
    "rename-icon": "kate",
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup": [
        "/share/zsh",
        "/share/man",
        "/bin/kwrite"
    ],
    "modules": [
        {
            "name": "markdownpart",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.1/src/markdownpart-24.12.1.tar.xz",
                    "sha256": "563e70dcf5ac857309f675ae6cce2403a8b6daa1f5711a9ffebcf4748e2f458b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/markdownpart-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.1/src/konsole-24.12.1.tar.xz",
                    "sha256": "43deca40b7fcddc340db12f08d0a63c538f1e540e9919b075a2f905e7a32cb3c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konsole-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kate",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "post-install": [
                "mv /app/bin/kate /app/bin/kate-bin",
                "install -Dm755 ../kate-wrapper /app/bin/kate"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.1/src/kate-24.12.1.tar.xz",
                    "sha256": "ec4830a8a2ade45e9a90a219d8e1656e408d229c2005de109e69a5e27a0bfaba",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kate-$version.tar.xz"
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "kate-wrapper",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec /app/bin/kate-bin \"$@\""
                    ]
                }
            ]
        }
    ]
}
