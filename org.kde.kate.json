{
    "id": "org.kde.kate",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kate",
    "rename-icon": "kate",
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup": [
        "/share/zsh",
        "/share/man",
        "/bin/kwrite"
    ],
    "modules": [
        {
            "name": "markdownpart",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.2/src/markdownpart-24.08.2.tar.xz",
                    "sha256": "15b3341f723f969eed61c14e0eec57a5d7a8a931ac9018b06d1183311bf5ba30",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/markdownpart-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.2/src/konsole-24.08.2.tar.xz",
                    "sha256": "ae72ca4e2d9123b9bada99d2d3b01398ff5082b549b38579cf9aa94c2bffd719",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konsole-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kate",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "post-install": [
                "mv /app/bin/kate /app/bin/kate-bin",
                "install -Dm755 ../kate-wrapper /app/bin/kate"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.2/src/kate-24.08.2.tar.xz",
                    "sha256": "d85b75318895dca2f40e96ee58e91e9a6012f3587e22d7f3e0fe13beffaeca6c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kate-$version.tar.xz"
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "kate-wrapper",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec /app/bin/kate-bin \"$@\""
                    ]
                }
            ]
        }
    ]
}
